<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:background="@color/Neutral_Gray_50"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:padding="10dp"
            android:textColor="@color/black"
            android:text="Berhasil Disimpan"
            android:gravity="center_horizontal"/>
        <TextView
            android:layout_width="match_parent"
            android:padding="10dp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Terima kasih, laporan Anda membantu kami dalam melakukan penanganan kasus secara tepat."
            android:gravity="center_horizontal" />

        <Button
            android:id="@+id/btn_dialog_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ok"
            android:textAllCaps="false"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:backgroundTint="@color/JDS_Primary_Color_Green"/>

    </LinearLayout>

</LinearLayout>